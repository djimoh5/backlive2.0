{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [ "es2015", "dom" ],
		"removeComments": false,
		"noImplicitAny": false,
        "outDir": "../build"
	},
	"exclude": [
		"node_modules",
		"../node_modules",
		"../typings"
	],
    "angularCompilerOptions": {
		"genDir": "../build"
	}
}